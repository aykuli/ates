{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "task.reassigned.v1",
  "description": "json schema for task assigned event (version 1)",
  "type": "array",
  "properties": {
    "event_uid":      { "type": "string" },
    "event_version":  { "enum": [1] },
    "event_name":     { "type": "string" },
    "event_time":     { "type": "string" },
    "producer":       { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "task_public_uid":      { "type": "string" },
        "assignee_public_uid":  { "type": "string" },
        "task_title":           { "type": "string" }
      },
      "required": ["task_public_uid", "assignee_public_uid"]
    }
  },
  "required": ["event_version", "event_name", "data"]
}